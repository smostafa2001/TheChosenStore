@model RegisterAccount

<style>
    .togglePassword, .toggleRePassword {
        cursor: pointer;
        color: darkgray;
        float: right;
        margin: -25px 10px 0 -25px;
        display: flex;
    }

        .togglePassword:hover, .toggleRePassword:hover {
            color: lightgray;
        }

    .password-input, .re-password-input {
        padding-right: 30px;
    }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد کاربر جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Fullname" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Fullname" />
                    <span asp-validation-for="Fullname" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Mobile" class="control-label">موبایل</label>
                    <input type="text" class="form-control" asp-for="Mobile" />
                    <span asp-validation-for="Mobile" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Username" class="control-label">نام کاربری</label>
                    <input type="text" class="form-control" asp-for="Username" />
                    <span asp-validation-for="Username" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Password" class="control-label">کلمه عبور</label>
                    <input type="password" class="form-control password-input" asp-for="Password" />
                    <i class="fa fa-eye-slash togglePassword"
                       onclick="(() => {
                                    var type = $('.password-input').attr('type') === 'password' ? 'text' : 'password';
                                    $('.password-input').attr('type', type);
                                    if ($(this).hasClass('fa-eye')) {
                                        $(this).removeClass('fa-eye');
                                        $(this).addClass('fa-eye-slash');
                                    }
                                    else {
                                        $(this).addClass('fa-eye');
                                        $(this).removeClass('fa-eye-slash');
                                    }
                                })()"></i>
                    <span asp-validation-for="Password" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RePassword" class="control-label">تکرار کلمه عبور</label>
                    <input type="password" class="form-control re-password-input" asp-for="RePassword" />
                    <i class="fa fa-eye-slash toggleRePassword"
                       onclick="(() => {
                                    var type = $('.re-password-input').attr('type') === 'password' ? 'text' : 'password';
                                    $('.re-password-input').attr('type', type);
                                    if ($(this).hasClass('fa-eye')) {
                                        $(this).removeClass('fa-eye');
                                        $(this).addClass('fa-eye-slash');
                                    }
                                    else {
                                        $(this).addClass('fa-eye');
                                        $(this).removeClass('fa-eye-slash');
                                    }
                                })()"></i>
                    <span asp-validation-for="RePassword" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label">نقش</label>
                    <select class="form-control" asp-for="RoleId" asp-items='new SelectList(Model.Roles, "Id", "Name")'>
                        <option value="0">نقش...</option>
                    </select>
                    <span asp-validation-for="RoleId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ProfilePhoto" class="control-label">پروفایل</label>
                    <input type="file" class="form-control" asp-for="ProfilePhoto" accept="image/*" />
                    <span asp-validation-for="ProfilePhoto" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>
