@model List<InventoryOperationViewModel>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">سوابق گردش انبار</h4>
</div>

<div class="modal-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>تعداد</th>
                <th>تاریخ</th>
                <th>عملیات</th>
                <th>موجودی فعلی</th>
                <th>عملگر</th>
                <th>توضیحات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var viewModel in Model)
            {
                <tr class="text-write @(viewModel.Operation ? "bg-success":"bg-danger")">
                    <td>@viewModel.Id</td>
                    <td>@viewModel.Count</td>
                    <td>@viewModel.OperationDate</td>
                    <td>
                        @if (viewModel.Operation)
                        {
                            <span>افزایش</span>
                        }
                        else
                        {
                            <span>کاهش</span>
                        }
                    </td>
                    <td>@viewModel.CurrentStock</td>
                    <td>@viewModel.Operator</td>
                    <td>@viewModel.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal" onclick="setTimeout(()=>$('.modal-dialog').css('width', ''), 500)">بستن</button>
</div>
