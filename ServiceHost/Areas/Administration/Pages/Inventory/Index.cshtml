@page

@model IndexModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "مدیریت انبار";
}

@if (Model.Message != null)
{
    @if (Model.Message == OperationMessages.IsSucceeded)
    {
        <div id="message" class="alert alert-success">@Model.Message</div>
    }
    else
    {
        <div id="message" class="alert alert-danger">@Model.Message</div>
    }
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد انبار جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در انبار</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.ProductId"></label>
                        <select class="form-control" asp-for="SearchModel.ProductId" asp-items="Model.Products">
                            <option value="0">محصول...</option>
                        </select>
                    </div>
                    <div class="form-group m-r-10">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="SearchModel.IsNotInStock"/>
                            <label asp-for="SearchModel.IsNotInStock">
                                جستجو در ناموجودها
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست انبار(@Model.Inventory.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>محصول</th>
                                    <th>قیمت</th>
                                    <th>موجودی انبار</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Inventory)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Product</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.CurrentStock</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a href="#showmodal=@Url.Page("./Index", "Edit", new {item.Id})" class="btn btn-warning waves-effect waves-dark m-b-5">
                                                <i class="fa fa-edit"></i>
                                                ویرایش
                                            </a>
                                            <a href="#showmodal=@Url.Page("./Index", "Increase", new {item.Id})" class="btn btn-success waves-effect waves-dark m-b-5">
                                                <i class="fa fa-plus"></i>
                                                افزایش موجودی
                                            </a>
                                            <a href="#showmodal=@Url.Page("./Index", "Decrease", new {item.Id})" class="btn btn-danger waves-effect waves-dark m-b-5">
                                                <i class="fa fa-minus"></i>
                                               کاهش موجودی
                                            </a>
                                            <a href="#showmodal=@Url.Page("./Index", "Log", new {item.Id})" class="btn btn-primary waves-effect waves-dark m-b-5" onclick="$('.modal-dialog').css('width', '60%')">
                                                <i class="fa fa-recycle"></i>
                                                مشاهده گردش انبار
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        setTimeout(function () {
            var element = document.getElementById('message');
            element.parentNode.removeChild(element);
        }, 3000);
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}